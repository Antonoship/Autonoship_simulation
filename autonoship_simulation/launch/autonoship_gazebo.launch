<?xml version="1.0"?>

<launch>

  <env name="ROSCONSOLE_CONFIG_FILE" value="$(find autonoship_simulation)/config/custom_rosconsole.conf"/>

  <!-- For setting debug level to debug -->
  <!-- <env name="ROSCONSOLE_CONFIG_FILE"
       value="$(find kingfisher_gazebo)/config/custom_rosconsole.conf"/>
   -->
  <!-- Command line arguments -->

  <arg name="world" default="autonoship.world"/>
  <arg name="name" default="autonoship"/>

  <!-- Initial USV location and attitude-->
  <arg name="x" default="1000.0" />
  <arg name="y" default="-1000.0" />
  <arg name="z" default="0.1" />
  <arg name="P" default="0" />
  <arg name="R" default="0" />
  <arg name="Y" default="0" />

  <!-- The switch about sensors and wind -->
  <arg name="front_camera" default="true"/>
  <arg name="gps" default="true"/>
  <arg name="imu" default="true"/>
  <arg name="lidar" default="false"/>
  <arg name="wind" default="false"/> 
  <arg name="p3d" default="false"/> 
  <arg name="radar" default="true"/> 

  <param name="use_sim_time" value="true" />
  <!-- Start Gazebo with the world file -->
  <include file="$(find gazebo_ros)/launch/empty_world.launch">
    <arg name="world_name" value="$(find autonoship_simulation)/worlds/$(arg world)"/>
    <arg name="verbose" value="true"/>
    <arg name="paused" value="false"/>
    <arg name="use_sim_time" value="true"/>
    <arg name="gui" value="true"/>
    <arg name="headless" value="false"/>
  </include>

  <!-- Load robot model -->
  <arg name="urdf" default="$(find autonoship_simulation)/xacro/autonoship_module.xacro"/>

  <!-- Spawn targetship_1 in Gazebo -->
  <include file="$(find autonoship_simulation)/launch/spawn_ship.launch" >
    <arg name="namespace" value="targetship1" />
    <arg name="wind" value="false"/> 
    <arg name="radar" value="false"/>
    <arg name="ownship" value="false" />

    <arg name="x" value="2000.0" />
    <arg name="y" value="0.0" />
    <arg name="z" value="$(arg z)" />
    <arg name="P" value="$(arg P)" />
    <arg name="R" value="$(arg R)" />
    <arg name="Y" value="$(arg Y)" />

    <arg name="urdf" value="$(arg urdf)"/>
  </include>


  <!-- Spawn targetship_2 in Gazebo -->
  <include file="$(find autonoship_simulation)/launch/spawn_ship.launch" >
    <arg name="namespace" value="targetship2" />
    <arg name="wind" value="false"/> 
    <arg name="radar" value="false"/>
    <arg name="ownship" value="false" />

    <arg name="x" value="3000.0" />
    <arg name="y" value="0.0" />
    <arg name="z" value="$(arg z)" />
    <arg name="P" value="$(arg P)" />
    <arg name="R" value="$(arg R)" />
    <arg name="Y" value="$(arg Y)" />

    <arg name="urdf" value="$(arg urdf)"/>
  </include>

  <!-- Spawn targetship_3 in Gazebo -->
  <include file="$(find autonoship_simulation)/launch/spawn_ship.launch" >
    <arg name="namespace" value="targetship3" />
    <arg name="wind" value="false"/> 
    <arg name="radar" value="false"/>
    <arg name="ownship" value="false" />

    <arg name="x" value="1000.0" />
    <arg name="y" value="1000.0" />
    <arg name="z" value="$(arg z)" />
    <arg name="P" value="$(arg P)" />
    <arg name="R" value="$(arg R)" />
    <arg name="Y" value="$(arg Y)" />

    <arg name="urdf" value="$(arg urdf)"/>
  </include>
 
  <!-- Spawn ownship in Gazebo -->
  <include file="$(find autonoship_simulation)/launch/spawn_ship.launch" >
    <arg name="namespace" value="ownship" />
    <arg name="wind" value="false"/> 
    <arg name="radar" value="$(arg radar)"/>
    <arg name="front_camera" value="true"/>
    <arg name="gps" value="true"/>
    <arg name="imu" value="true"/>
    <arg name="p3d" value="false"/> 
    <arg name="ownship" value="true" />

    <arg name="x" value="1000.0" />
    <arg name="y" value="-1000.0" />
    <arg name="z" value="$(arg z)" />
    <arg name="P" value="$(arg P)" />
    <arg name="R" value="$(arg R)" />
    <arg name="Y" value="$(arg Y)" />

    <arg name="urdf" value="$(arg urdf)"/>
  </include>

</launch>
